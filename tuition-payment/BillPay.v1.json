        "summary": "5.Get Refunding Trans",
        "tags": [
          "Operations"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/ReFundingTrans"
            }
          },
          "": {
            "schema": {
              "$ref": "#/definitions/ReFundingTrans"
            }
          }
        },
        "operationId": "get-refundingtrans"
      }
    }
